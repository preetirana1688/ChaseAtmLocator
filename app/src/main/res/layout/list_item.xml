<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Type:"
        android:id="@+id/locationTypeHeader"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location "
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/locationTypeHeader"
        android:id="@+id/locationType"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationTypeHeader"
        android:text="Distance:"
        android:id="@+id/DistanceTypeHeader"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:layout_below="@+id/locationTypeHeader"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/DistanceTypeHeader"
        android:id="@+id/distance"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_below="@+id/DistanceTypeHeader"
        android:id="@+id/nameHeader"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/nameHeader"
        android:layout_below="@+id/DistanceTypeHeader"
        android:id="@+id/name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:layout_below="@+id/nameHeader"
        android:id="@+id/AddressHeader"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:paddingLeft="10dp"
        android:layout_below="@+id/nameHeader"
        android:layout_toRightOf="@+id/AddressHeader"
        android:id="@+id/address"
        />

</RelativeLayout>